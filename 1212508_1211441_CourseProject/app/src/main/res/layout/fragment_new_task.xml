<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/editTaskLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="New Task"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="137dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Task Image"
        android:scaleType="centerCrop"
        android:src="@drawable/tasknew" />


    <EditText
        android:id="@+id/editTextTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="2dp"
        android:hint="Task Title"
        android:inputType="text"
        android:minHeight="60dp"
        android:padding="12dp"
        android:textColor="#333333"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="2dp"
        android:hint="Task Description"
        android:inputType="textMultiLine"
        android:minHeight="60dp"
        android:padding="12dp"
        android:textColor="#333333"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#3F51B5"
        android:elevation="4dp"
        android:minHeight="50dp"
        android:padding="12dp"
        android:text="Select Due Date"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonDueTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#3F51B5"
        android:elevation="4dp"
        android:minHeight="50dp"
        android:padding="12dp"
        android:text="Select Due Time"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinnerPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_spinner"
        android:elevation="2dp"
        android:minHeight="50dp"
        android:padding="12dp"
        android:popupBackground="#FFFFFF" />

    <CheckBox
        android:id="@+id/checkBoxReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Set Reminder"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/checkBoxCompletionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Mark as Completed"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonSaveTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF4081"
        android:elevation="6dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:text="Save Task"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</LinearLayout>
