<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#BBDEFB"/> <!-- Light blue background -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#1976D2"/> <!-- Blue border -->
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#E0E0E0"/> <!-- Light border -->
        </shape>
    </item>
</selector>
